{
  "name": "trading-app-backend",
  "version": "1.0.0",
  "description": "Financial Trading App Backend API",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "seed": "node src/scripts/seed.js",
    "seed:production": "node seed-production.js",
    "build": "npm run seed && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.{js,json}",
    "format:check": "prettier --check src/**/*.{js,json}",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "complexity": "jscpd --min-lines 5 --min-tokens 50 src/",
    "health": "curl -f http://localhost:5000/health || exit 1"
  },
  "keywords": [
    "trading",
    "finance",
    "api",
    "nodejs"
  ],
  "author": "Yash Sharma",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "artillery": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jscpd": "^3.5.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3"
  }
}
